<%- include('header') %>
  <div>
    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Database Name</th>
          <th scope="col">Size on disk</th>
        </tr>
      </thead>
      <tbody>

        <% for (var i=0; i < listDatabase.length;i++) { %>
          <tr>
            <th scope="row">
              <%=i+1%>
            </th>
            <td>
              <%= listDatabase[i].name %>
            </td>
            <td>
              <%= listDatabase[i].sizeOnDisk %>
            </td>
          </tr>
          <% } %>
      </tbody>
    </table>
  </div>
  </div>
  <div id="main-loading"><img src="images/loader.gif" /></div>
  </body>

  </html>
  <script src="scripts/common.js"></script>
  <script>
    $(document).ready(function () {

      JqueryFunction.authentication()

      $(window).on('load', function () {
        JqueryFunction.Loading(0)
      })

    })
  </script>